@model Vidley.Models.Customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

@{
    if (Model.Birthday != null)
    {
        <ul>
            <li>@Model.MembershipType.Name</li>
            <li>@Model.Birthday.Value.ToShortDateString()</li>
        </ul>
    }

    else
    {
        <ul>
            <li>@Model.MembershipType.Name</li>
        </ul>
    }
}





