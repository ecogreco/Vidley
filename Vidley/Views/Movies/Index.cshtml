@model Vidley.ViewModels.MovieListViewModel

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<h2>Movies</h2>

<table class="table table-bordered table-hover">
    <tr>
        <td>Movie</td>
    </tr>
    @foreach (var movie in Model.MovieList)
    {
        <tr><td>@Html.ActionLink(movie.Name, "Details/" + movie.Id, "Movies")</td></tr>
    }
</table>